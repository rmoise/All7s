# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_read_token
SANITY_STUDIO_API_TOKEN=your_studio_token
SANITY_WEBHOOK_SECRET=your_webhook_secret
SANITY_AUTH_TOKEN=your_auth_token

# Environment Settings
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development
SANITY_STUDIO_DATASET=production

# Site URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=http://localhost:3000
URL=http://localhost:3000
DEPLOY_URL=http://localhost:3000

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Spotify API (for music metadata)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Preview Secret
SANITY_PREVIEW_SECRET=your_preview_secret

# Netlify Specific (automatically set by Netlify)
NETLIFY=true
NETLIFY_NEXT_PLUGIN_SKIP=true
BUILD_ID=
CONTEXT=
DEPLOY_PRIME_URL=

# Optional: Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_PREVIEW=true
NEXT_PUBLIC_ENABLE_DRAFT_MODE=true